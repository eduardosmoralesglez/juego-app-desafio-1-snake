<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="358.0" prefWidth="436.0" spacing="5.0"
   xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="es.puerto.juego1.controller.LoginController">
   <ComboBox fx:id="comboIdioma" onAction="#seleccionarIdiomaClick" prefWidth="150.0"
      promptText="Idioma" />
   <Button fx:id="openRegistrarButton" alignment="TOP_RIGHT" mnemonicParsing="false"
      onAction="#openRegistrar" text="Registrarse">
      <VBox.margin>
         <Insets left="300.0" />
      </VBox.margin>
   </Button>
   <Text fx:id="textUsuario" strokeType="OUTSIDE" strokeWidth="0.0" text="Usuario" />
   <TextField fx:id="textFieldUsuario" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="24.0"
      prefWidth="200.0" />
   <Text fx:id="textContrasenia" strokeType="OUTSIDE" strokeWidth="0.0" text="Contraseña" />
   <PasswordField fx:id="textFieldPassword" maxHeight="-Infinity" maxWidth="-Infinity"
      prefHeight="24.0" prefWidth="200.0" />
   <Button fx:id="openPerfilButton" alignment="TOP_CENTER" onAction="#onLoginButtonClick"
      prefHeight="26.0" prefWidth="163.0" text="Aceptar" textAlignment="CENTER" />
   <Text fx:id="textFieldMensaje" strokeType="OUTSIDE" strokeWidth="0.0" />
   <Button fx:id="openRecuperarButton" mnemonicParsing="false" onAction="#openRecuperar"
      text="Recuperar Contraseña">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </Button>
   <Button fx:id="buttonLista" mnemonicParsing="false" onAction="#onClickButtonLista"
      text="Lista de Usuarios" />
</VBox>